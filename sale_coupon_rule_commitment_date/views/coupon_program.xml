<odoo>

    <record id="coupon_program_view_promo_program_form" model="ir.ui.view">
        <field name="model">coupon.program</field>
        <field name="inherit_id" ref="coupon.coupon_program_view_promo_program_form" />
        <field name="priority">99999</field>
        <field name="arch" type="xml">
            <field name="rule_date_to" position="after">
                <field
                    name="rule_date_field"
                    string="Based on"
                    widget="radio"
                    options="{'horizontal': True}"
                    attrs="{'invisible': [('rule_date_from', '=', False), ('rule_date_to', '=', False)]}"
                />
            </field>
        </field>
    </record>

</odoo>
