<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.sale.coupon.chainable</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_coupon.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='sale_coupon']/following::div[hasclass('content-group')]"
                position="inside"
            >
                <div
                    class="mt8"
                    attrs="{'invisible': [('module_sale_coupon', '=', False)]}"
                >
                    <button
                        name="%(coupon_program_order_action)d"
                        icon="fa-arrow-right"
                        type="action"
                        string="Programs Order"
                        class="btn-link"
                    />
                </div>
            </xpath>
        </field>
    </record>

</odoo>
