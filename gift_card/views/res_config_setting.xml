<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_gift_card_view_form_" model="ir.ui.view">
        <field name="name">res.config.settings.gift.card.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='coupon_settings']" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="gift_card_settings"
                    title="Gift Cards as payment"
                >
                    <div class="o_setting_left_pane">
                        <field name="module_gift_card" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_gift_card" />
                        <div class="text-muted" id="sale_gift_card">
                            Gift Cards as payment mode
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('module_gift_card' ,'=', False)]}"
                        >
                            <div class="mt16">
                                <label
                                    for="gift_card_default_journal_id"
                                    class="o_light_label"
                                />
                                <field
                                    name="gift_card_default_journal_id"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
